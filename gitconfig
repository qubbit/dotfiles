  email = gadhikari@covermymeds.com
  #signingkey = 6F7FC6D5E989501D

[core]
  #autocrlf = input
  excludesfile = ~/.gitignore

[color]
  ui = true

[push]
  default = current
[commit]
  #gpgsign = true
[pull]
  rebase = true
[gpg]
  program = gpg2
[branch]
  autosetupmerge = always
