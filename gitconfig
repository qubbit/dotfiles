[includeIf "gitdir:~/pg/"]
  path = ~/.dotfiles/gitconfig-play

[core]
  excludesfile = ~/.gitignore

[color]
  ui = true

[push]
  default = current

[pull]
  rebase = true

[gpg]
  program = gpg2

[branch]
  autosetupmerge = always
